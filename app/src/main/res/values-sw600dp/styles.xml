<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="back_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/green_titles</item>
    </style>

    <style name="show_answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/green_button</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>

    <style name="titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/tracyqueen</item>

    </style>

    <style name="moods_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>